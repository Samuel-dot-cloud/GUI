<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/nameview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:text="Student name: "
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/nameSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="50dp"
        android:layout_alignBottom="@+id/nameview"
        android:layout_toRightOf="@+id/nameview" />

    <TextView
        android:id="@+id/genderview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="Student gender: "
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/genderSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="50dp"
        android:layout_alignBottom="@+id/genderview"
        android:layout_toRightOf="@+id/genderview" />

    <TextView
        android:id="@+id/foodview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:text="Student's favourite food: "
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/foodSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginStart="50dp"
        android:layout_alignBottom="@+id/foodview"
        android:layout_toRightOf="@+id/foodview" />
</RelativeLayout>